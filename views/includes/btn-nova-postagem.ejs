                <form action="" class="post-coment-form">
                <div class="img-avatar-coment">
                    <img src="/img/kate.jpg" alt="">
                </div>
                <div class="div-input-comentario">
                    <input type="text" name="comentario" class="input-comentario" autocomplete="off" required placeholder="O que você quer publicar hoje?"
                    data-toggle="modal" data-target="#modalMobile">
                </div>
                </form>
            </div>
        <!-- </div> -->
    </section>
