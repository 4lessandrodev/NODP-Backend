            <div class="botao" data-toggle="modal" data-target="#modalAprender">
                <i id="iconeBotao1" class="fas fa-chalkboard-teacher"></i>
                <p>aprender</p>
            </div>
            
            <div class="botao" data-toggle="modal" data-target="#modalAprendendo">
                <i id="iconeBotao2" class="far fa-hand-peace"></i>
                <p>aprendendo</p>
            </div>
            <div class="botao" data-toggle="modal" data-target="#modalEnsinar">
                <i id="iconeBotao3" class="fas fa-glasses"></i>
                <p>ensinar</p>
            </div>
            <div class="botao" data-toggle="modal" data-target="#modalEnsinando">
                <i id="iconeBotao4" class="far fa-thumbs-up"></i>
                <p>ensinando</p>
            </div>
        </div>
        
        <div class="apoiados">
            <div class="text-apoiados">
                <p>Seus apoiados</p>
            </div>
            
            <div class="container listagem-apoiados">
                <% for( let apoiado of apoiados  ) { %>
                
                    <div class="apoiado">
                    <a href="/users/posts-usuario?perfil=<%=apoiado.apoiado.id%>"><img src="/img/profile-img/<%=apoiado.apoiado.avatar%>"
                            class="rounded-circle"
                            alt="avatar"></a>
                </div>
                
                <% } %> 
                <div class="seta" onclick="location.href='/users/apoio'">
                    <span style="font-size: 0.8em; color: white;"></span>
                    <span>
                        <i class="fas fa-chevron-right"></i>
                    </span>
                </div>  
            </div>
        </div>
        
    </section> 
    <section id="mobilePostPesquisa" class="container">
        <div class="boas-vendas">Bem-vindo,  User </br></div>
